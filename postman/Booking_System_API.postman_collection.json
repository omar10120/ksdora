      "item": [
        {
          "name": "Create Booking (Quantity-based)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "userId",
                "value": "{{userId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tripId\": \"{{tripId}}\",\n  \"seatsNumber\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"]
            },
            "description": "Create a booking with quantity-based seat selection"
          }
        },
        {
          "name": "Create Booking (Specific Seats)",
