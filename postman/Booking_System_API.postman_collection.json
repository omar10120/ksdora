  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set dynamic variables if needed",
          "if (!pm.variables.get('bookingId')) {",
          "    pm.variables.set('bookingId', 'booking-' + Date.now());",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract booking ID from response",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.id) {",
          "    pm.variables.set('bookingId', pm.response.json().data.id);",
          "    console.log('Updated bookingId:', pm.response.json().data.id);",
          "}"
        ]
      }
    }
  ]
